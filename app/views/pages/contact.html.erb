<div class="container">
  <h1>Contact</h1>
  <p>Filtering members:</p>
  <form action="/contact" method='get'>
    <!-- the name of the input is the key inside of our params -->
    <input type="text" name="member" value="<%= params[:member] %>">
    <input type="submit" class="btn btn-secondary">
  </form>
  <ul>
    <% @members.each do |member| %>
      <li><%= member.capitalize %></li>
    <% end %>
  </ul>
  <p>
    <!-- Normal link with text -->
    <%= link_to 'This gets displayed', root_path, class: 'btn btn-light' %>
    <!-- Link with HTML element -->
    <%= link_to root_path, class: 'btn btn-light' do %>
      <i class="fa-solid fa-house"></i>
    <% end %>
  </p>
  <p>Add a member to the team</p>
</div>
